<!DOCTYPE html>
<head>
  <% content_for :header_tags do %>
    <%= javascript_include_tag 'jquery-1.11.0.min.js', 'underscore-min.js', 'backbone-min.js', 'infiniScroll.js', 'etch.js', 'utils.js', 'topView.js', 'profileView.js', 'employersView.js', 'intercom.js', :plugin => 'intercom' %>
    <%= stylesheet_link_tag 'bootstrap.min.css', 'bootstrap.css.map', 'etch.css', 'intercom.css', :plugin => 'intercom' %>
  <% end %>
</head>
<body>
  <div class="navbar navbar-default">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Tercom IN</a>
    </div>
    <div class="collapse navbar-collapse top-menu">
      <ul class="nav navbar-nav">
        <li class="menu-item" value="mypage"><a href="#mypage"><%=l(:my_page)%></a></li>
        <li class="menu-item" value="employers"><a href="#employers"><%=l(:employers)%></a></li>
        <li class="menu-item" value="news"><a href="#news"><%=l(:news)%></a></li>
        <li class="menu-item" value="groups"><a href="#groups"><%=l(:groups)%></a></li>
      </ul>
      <div class="navbar-form navbar-right">
        <input type="text" class="form-control col-lg-8 search-control" placeholder="Search">
        <button type="button" class="btn btn-default btn-search">
          <span class="glyphicon glyphicon-search"></span>
        </button>
      </div>
    </div><!--/.nav-collapse -->
  </div>
  <div id="container-fluid" >
    <div class="col-md-1">
    </div>
    <div class="col-md-10 content">
    </div>
    <div class="col-md-1">
    </div>
  </div>
  <script type="html/template" id="employer-template">
    <div class="row">
      <div class="col-md-12">
        <div class="row employer_row">
          <div class="col-md-2 employer_img">
             <a href='#mypage/<%%- user.id %>'>
                <%% if (user.avatar_url == "noavatar") { %>
                  <img class="no-profile-img"/>
                <%% } else {%>
                  <img src=<%%- user.avatar_url %> alt="" class="profile-img" />
                <%% } %>
             </a>
          </div>
          <div class="col-md-10">
            <label><%%- user.lastname %></label>
            <label><%%- user.firstname %></label>
            <br>
            <label><%=l(:skills)%>:</label>
            <label><%%- user.skills %></label>
          </div>
        </div>
        <hr>
      </div>
    </div>
  </script>
  <script type="text/template" id="profile-template">
    <table>
      <tbody>
        <tr>
          <td style="width: 200px;">
          <div class="col-md-2 employer_img">
          <table style="height: 394px;">
            <tbody>
              <tr>
                <td colspan="2" style="width: 200px;">
                <img id="picture">
                </img>
    
                <div class="profile-div">                    
                  <%% if (user.avatar_url == "noavatar") { %>
                    <img class="no-profile-img"/>
                  <%% } else {%>
                    <img src=<%%- user.avatar_url %> alt="" class="profile-img" />
                  <%% } %>
                </div>
                </td>
              </tr>
              <tr>
                <td style="width: 120px; height: 50px;"><button type="button" class="btn btn-default btn-lg btn-block">Лучший<br>сотрудник</button></td>
                <td style="width: 80px; height: 50px;"><button type="button" class="btn btn-default btn-lg btn-block">Где<br>сидит</button></td>
              </tr>
              <tr>
                <td style="width: 120px; height: 60px;"><button type="button" class="btn btn-default btn-lg btn-block">25 тт-ок</button></td>
                <td style="width: 80px; height: 60px;"><button type="button" class="btn btn-default btn-lg btn-block">Хвалить!!!</button></td>
              </tr>
              <tr>
                <td colspan="2" style="width: 200px; height: 50px;"><button type="button" class="btn btn-primary btn-lg btn-block">Сообщение</button></td>
              </tr>
            </tbody>
          </table>
          </div>
          </td>
          <td style="width: 20px;"></td>
          <td style="width: 100%;">
          <div class="col-md-10">
          <table style="width: 600px; height: 400px;">
            <tbody>
              <tr>
                <td style="width: 410px; height: 70px;"><h2><%%-user.firstname%> <%%-user.lastname %></h2></td>
                <td style="width: 10px; height: 70px;"></td>
                <td style="width: 80px; height: 70px;"><button type="button" class="btn btn-primary">CV</button></td>
              </tr>
              <tr>
                <td colspan="3" style="width: 410px; height: 37px;"><b>Проект:</b> <%%-user.firstname%></td>
              </tr>
              <tr>
                <td colspan="3" style="width: 410px; height: 7px;"><b>Должность:</b> <%%-user.firstname%></td>
              </tr>
              <tr>
                <td colspan="3" style="width: 410px;"><b>e-mail:</b> <%%-user.firstname%></td>
              </tr>
              <tr>
                <td colspan="3" style="width: 410px;"><b>Номер комнаты:</b> <%%-user.firstname%></td>
              </tr>
              <tr>
                <td colspan="3" style="width: 410px;"><b>День рождения:</b> <%%-user.firstname%></td>
              </tr>
              <tr>
                <td colspan="3" style="width: 410px;"><b>Работаю в компании:</b> <%%-user.firstname%></td>
              </tr>
              <tr>
                <td colspan="3" style="width: 410px;"><b>Мои интересы:</b> <%%-user.firstname%></td>
              </tr>
            </tbody>
          </table>
          </div>
          </td>
        </tr>
        <tr>
          <td colspan="4">
            <h3>Технические навыки</h3>
            <hr>
            <div class="skillsPh">
              <label><%=l(:skills)%>:</label>
              <div class="editable profile-skills" data-button-class=all>
                <%% if (user.skills) { %><%%= user.skills %><%% } else {%>Skills<%% } %>
              </div>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="3"><h3>Коммуникативные навыки</h3><hr></td>
        </tr>
        <tr>
          <td colspan="3"><h3>Иностранные языки</h3><hr></td>
        </tr>
        <tr>
          <td colspan="3"><h3>Образование</h3><hr></td>
        </tr>
        <tr>
          <td colspan="3"><h3>Курсы и тренинги</h3><hr></td>
        </tr>
      </tbody>
    </table>
  </script>
</body>
