<!DOCTYPE html>
<head>
  <% content_for :header_tags do %>
    <%= javascript_include_tag 'jquery-1.11.0.min.js', 'underscore-min.js', 'backbone-min.js', 'intercom_views.js', 'intercom.js', :plugin => 'intercom' %>
    <%= stylesheet_link_tag 'bootstrap.min.css', 'intercom.css', :plugin => 'intercom' %>
  <% end %>
</head>
<body>
  <div class="navbar navbar-default " role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse top-menu">
        <ul class="nav navbar-nav">
          <li class="menu-item" value="mypage"><a href="#mypage">My Page</a></li>
          <li class="menu-item" value="employers"><a href="#employers">Employers</a></li>
          <li class="menu-item" value="news"><a href="#news">News</a></li>
          <li class="menu-item" value="groups"><a href="#groups">Groups</a></li>
        </ul>
        <div class="navbar-form navbar-right">
          <input type="text" class="form-control col-lg-8 search-control" placeholder="Search">
        </div>
      </div><!--/.nav-collapse -->
    </div>
  </div>
  <div id="container-fluid" >
    <div class="col-md-3">
    </div>
    <div class="col-md-6 content">
    </div>
    <div class="col-md-3">
    </div>
  </div>
  <script type="text/template" id="employer-template">
    <div class="row">
      <div class="col-md-12">
        <div class="row employer_row">
          <div class="col-md-4">
            <img src="http://dummyimage.com/100x100&text=Photo" alt="" />
          </div>
          <div class="col-md-8">
            <label>user_id:</label>
            <label><%%- user_profile.user_id %></label>
            <br>
            <label>skills:</label>
            <label><%%- user_profile.skills %></label>
          </div>
        </div>
      </div>
    </div>
  </script>
</body>
